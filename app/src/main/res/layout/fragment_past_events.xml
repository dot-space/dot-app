<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpcomingEventsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/upcoming_card"
            android:layout_width="274dp"
            android:layout_height="134dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="532dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/textView"
            style="@style/Widget.DotSpace.TextView"
            android:layout_width="107dp"
            android:layout_height="51dp"
            android:layout_alignStart="@+id/upcoming_card"
            android:layout_alignTop="@+id/upcoming_card"
            android:layout_alignEnd="@+id/upcoming_card"
            android:layout_alignBottom="@+id/upcoming_card"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="53dp"
            android:text="@string/dot_exhibition"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>