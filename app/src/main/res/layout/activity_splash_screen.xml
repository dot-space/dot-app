<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">



    <ImageView
        android:id="@+id/academics_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/academics_image"
        android:scaleType="centerCrop"
        android:src="@drawable/academics_drone_pic_blurred"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-159dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#80FFFFFF"
        android:src="@drawable/nmims_logo_transparent_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:layout_below="@+id/logo"
        android:background="#80FFFFFF"
        android:fontFamily="@font/nothing_square_dots"
        android:gravity="center"
        android:text="@string/powered_by_dot"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/academics_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.655" />

