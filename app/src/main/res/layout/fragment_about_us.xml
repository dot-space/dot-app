<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about_us.AboutUsFragment">


    <ImageView
        android:id="@+id/dot_logo"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/dot_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dot_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:justificationMode="inter_word"
        android:text="@string/dot_about_us"
        android:textSize="20sp"
        android:fontFamily="@font/actor"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dot_logo" />

    <Button
        android:id="@+id/faq_button"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:text="@string/faqs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot_about_us" />
</androidx.constraintlayout.widget.ConstraintLayout>